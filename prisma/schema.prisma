// Prisma schema for PlanetScale (MySQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Run {
  id         String   @id
  query      String
  createdBy  String
  status     String
  startedAt  DateTime
  prep       Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  calls      Call[]
}

model Call {
  id               String   @id @db.VarChar(191)
  runId            String   @db.VarChar(191)
  run              Run      @relation(fields: [runId], references: [id], onDelete: Cascade)

  leadId           String
  leadName         String
  leadPhone        String
  leadSource       String?
  leadRating       Float?
  leadReviewCount  Int?
  leadDescription  String?
  leadConfidence   Float?
  leadUrl          String?

  state            String
  sentiment        String?
  startedAt        DateTime?
  endedAt          DateTime?
  durationSeconds  Int?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  transcript       TranscriptTurn[]

  @@index([runId])
  @@index([state])
}

model TranscriptTurn {
  id        String   @id @db.VarChar(191)
  callId    String
  call      Call     @relation(fields: [callId], references: [id], onDelete: Cascade)

  speaker   String
  text      String
  timestamp DateTime @default(now())
  t0Ms      Int?
  t1Ms      Int?

  createdAt DateTime @default(now())

  @@index([callId])
}
