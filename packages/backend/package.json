{
  "name": "vadr-backend",
  "version": "1.0.0",
  "description": "VADR Backend API - Fastify server for voice agent calls",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "bun run --cwd ../shared build && tsc && tsc-alias",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^5.20.0",
    "@sentry/node": "^8.19.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "metorial": "^1.0.3",
    "openai": "^4.73.1",
    "ws": "^8.18.0",
    "twilio": "^5.2.1",
    "@vadr/shared": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "prisma": "^5.20.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "@types/ws": "^8.5.13"
  }
}
